<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
 xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-4.0.xsd">

 <!-- Mail Service -->
 <context:component-scan base-package="com.automation.seletest.core.services.MailService" />

 <!-- SET default mail properties -->
 <bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
  <property name="host" value="smtp.gmail.com" />
  <property name="port" value="25" />
  <property name="username" value="gpapadakis84@gmail.com" />
  <property name="password" value="25081984" />
  <property name="javaMailProperties">
   <props>
    <prop key="mail.transport.protocol">smtp</prop>
    <prop key="mail.smtp.auth">true</prop>
    <prop key="mail.smtp.starttls.enable">true</prop>
    <prop key="mail.debug">true</prop>
   </props>
  </property>
 </bean>

 <!-- You can have some pre-configured messagess also which are ready to 
  send -->
 <bean id="preConfiguredMessage" class="org.springframework.mail.SimpleMailMessage">
  <property name="to" value="gpapadakis84@gmail.com"></property>
  <property name="from" value="gpapadakis84@gmail.com"></property>
  <property name="subject" value="FATAL - Application crash. Save your job !!" />
 </bean>
</beans>